<% if @answer.valid? %>
  var newLi = document.createElement('li');
  newLi.innerHTML = '<%= j render 'answers/answer', answer: @answer %>';
  document.querySelector('ul.answers').appendChild(newLi);
  document.getElementById("answer_body").value = '';
<% else %>
  document.querySelector('.errors').innerHTML = '<%= j render 'common/errors', resource: @answer %>';
<% end %>