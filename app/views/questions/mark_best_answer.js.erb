$('.checkbox-marker').on('change', function() {
  $('.checkbox-marker').not(this).prop('checked', false);
  if($(this).is(":checked")) {
    $('#cont-answer-<%= @answer.id %>').addClass("best-answer").prependTo("ul.answers");
  } else {
    $('#cont-answer-<%= @answer.id %>').removeClass("best-answer");
  }
});
